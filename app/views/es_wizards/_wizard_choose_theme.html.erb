<%= form_tag({}, { :name => 'admin_form',:class => 'form-horizontal'}) do%>

	  <div class="form-group">
	    <label class="col-sm-3 control-label"><%="Thème installé".trn%> :</label>
		<div class="col-sm-5">
	      	<%= easy_tag('label',:label => @theme, :style => "background-color:inherit;") %>
	    </div>
	  </div>

	  <div class="form-group">
	    <label for="admin_template" class="col-sm-3 control-label"><%="Nouveau thème".trn%> : </label>
		<div class="col-sm-5">
		    <%=  collection_select(:admin, :theme, EsTheme.all.sort_by{|t| t.code}, :code, :code, {:selected => @theme},{:ajax_action => "wizard_theme_preview", :class => "form-control"}) %>
	    </div>
		<div class="col-sm-3 ">
			<%= render :partial => 'shared/goto_menu_item', :locals => {:text => "Sauver".trn, :action => "wizard_choose_theme",  :form => "admin_form",:class_btn => 'btn btn-default'}%>
	    </div>	    	    
	    
	  </div>

	  <div id="div_wizard_theme_preview">
		  <%= render :partial => 'wizard_theme_preview' %>	
	  </div>


	<p><%="Les thèmes sont prédéfinis dans cette application.Il n'est pas possible d'en créer ou modifier vous-même.".trn%>
	<br>
	<%="A tout moment vous pouvez quitter cet assistent ou y revenir.".trn%></p>

<% end %>

	<script>
		initajaxplus();			
	</script>
