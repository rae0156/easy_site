<% @title = "Récupération du mot de passe" %>
<div class="jumbotron">
    <h2><%= image_tag('appli/padlock_32.png', {:alt => @title, :align => "middle"}) %>&nbsp;<%= @title %></h2>

	<%= form_tag({:controller => 'users',:action => 'password_recovery'}, { :name => 'password_form', :class => "form-horizontal" }) do %>

		<div class="control-group">
		    <label class="control-label" for="user_mail">E-mail : </label>
		    <div class="controls">
				<%= email_field "user", "mail", :size => 60, :maxlength => 60 %>
				<p>Un mail vous sera automatiquement envoyé</p>
			</div>
		</div>
		<div class="control-group">  
		    <div class="controls btn btn-default">
				<%= render :partial => 'shared/goto_menu_item', :locals => {:controller => 'es_users',:action => 'password_recovery', :image => "appli/process_32.png", :text => "Envoyer", :form => "password_form"}%>
			</div>
		</div>
		
	<% end %>

</div>


