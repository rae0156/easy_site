<% @title = EsUser.find(:all).size == 0 ? "Premier utilisateur".trn : "Connexion".trn %>
<div class="cadre bg-primary">
	    <h2><%= image_tag('appli/32/lock.png', {:alt => @title, :align => "middle"}) %> <%= @title %></h2>

	<%= form_tag({}, { :name => 'login_form', :class => "form-horizontal" }) do %>

		<div class="form-group">
		    <label class="col-sm-4 control-label" for="user_mail"><%=(EsUser.find(:all).size == 0 ? "Pseudo" : "Mail ou Pseuso").trn%> : </label>
		    <div class="col-sm-4">
				<%= text_field "user", "mail", :maxlength => 50 ,:class => "form-control"%>
			</div>
		</div>
		<div class="form-group">  
		    <label class="col-sm-4 control-label" for="user_password"><%="Mot de passe".trn%> : </label>
		    <div class="col-sm-4">
				<%= password_field "user", "password", :maxlength => 50, :class => "form-control" %>
			</div>
		</div>
		<div class="form-group ">  
		    <div class="col-sm-4"></div>
		    <div class="btn btn-default">
				<%= render :partial => 'shared/goto_menu_item', :locals => {:html_option => {:id => 'login_btn'}, :text => "Se connecter".trn,:fa => "fa-lock", :controller => 'es_users',:action => 'login_connect', :form => "login_form"}%>
			</div>
		</div>

	<% end %>


</div>

<script>
    $(document).ready(function(){
        $('#user_password, #user_mail').keypress(function(e){
          if(e.keyCode==13)
          $('#login_btn').click();
        });
    });	
</script>

