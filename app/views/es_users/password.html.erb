<% @title = "Modification du mot de passe" %>
<div class="jumbotron">
    <h2><%= image_tag('appli/padlock_32.png', {:alt => @title, :align => "middle"}) %>&nbsp;<%= @title %></h2>

	<%= errors_for(@user) %>

	<%= form_tag({:controller => 'es_users',:action => 'password_update'}, { :name => 'password_form', :class => "form-horizontal"  }) do %>

	    <h4><%= field_description "DonnÃ©es obligatoires", true %></h4>
		<div class="control-group">  
		    <label class="control-label" for="user_oldpassword">Ancien mot de passe : </label>
		    <div class="controls">
				<%= password_field "user", "oldpassword", :size => 12, :maxlength => 12 %>
				<%= field_description "", true %>
			</div>
		</div>
		<div class="control-group">  
		    <label class="control-label" for="user_password1">Nouveau mot de passe : </label>
		    <div class="controls">
				<%= password_field "user", "password1", :size => 12, :maxlength => 12 %>
				<%= field_description "", true %>
			</div>
		</div>
		<div class="control-group">  
		    <label class="control-label" for="user_password2">Validation du mot de passe : </label>
		    <div class="controls">
				<%= password_field "user", "password2", :size => 12, :maxlength => 12 %>
				<%= field_description "", true %>
			</div>
		</div>

		<div class="control-group">  
		    <div class="controls btn btn-default">
				<%= render :partial => 'shared/goto_menu_item', :locals => {:text => "Sauver",:image => "appli/process_32.png", :form => "password_form" }%>
			</div>
		</div>

	<% end %>

</div>


