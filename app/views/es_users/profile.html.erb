<% @title = "Modification de votre profil" %>
<div class="jumbotron">

    <h2><%= image_tag('appli/user_48.png', {:alt => @title, :align => "middle"}) %>&nbsp;<%= @title %></h2>

	<%= errors_for(@user) %>

	<%= form_tag({:controller => 'es_users',:action => 'profile_update'}, { :name => 'user_form', :class => "form-horizontal" }) do %>
        <%= render :partial => 'form' %>

		<div class="control-group">  
		    <div class="controls btn btn-default">
				<%= render :partial => 'shared/goto_menu_item', :locals => {:text => "Sauver",:image => "appli/save_32.png", :form => "user_form"}%>
			</div>
		</div>
	<% end %>


</div>


