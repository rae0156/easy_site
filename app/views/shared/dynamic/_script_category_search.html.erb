<script type="text/javascript">
    $('#fileTree_element').fileTree({ root: '', script: '/<%=@setup_controller[:controller_name]%>/contenttree' }, function(dir) {
		$.ajax('/<%=@setup_controller[:controller_name]%>/list', {
		    data: { dir: dir},
		    dataType: 'script'
		});
    });
        
	$(document ).on('click','#view_hide', function() {
		$('#fileTree_element').toggle();
	});
	$('#fileTree_element').mouseleave(function(ev) {
        ev.preventDefault();
        $('#fileTree_element').hide();
        return false;
	});
	$('#fileTree_element').hide();
        
        
</script>
