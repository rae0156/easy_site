		    <div class="form-group">
		      <label for="roles_es_role_ids" class="col-sm-2 control-label"><%="Chemin".trn%> : </label>
			  <div class="col-sm-10">
			  	<p class="form-control-static"><%= @setup.path.blank? ? '*' : @setup.path %></p>				
			  </div>
  			</div>

		    <div class="form-group">
		      <label for="roles_es_role_ids" class="col-sm-2 control-label"><%="Nom".trn%> : </label>
			  <div class="col-sm-10">
			  	<p class="form-control-static"><%=@setup.name%></p>						      	
			  </div>
  			</div>

		    <div class="form-group">
		      <label for="roles_es_role_ids" class="col-sm-2 control-label"><%= field_description "", true %> <%="Valeur".trn%> : </label>
			  <div class="col-sm-9">
				<%case @setup.type_data
				  when "text"%>
					<%= text_field "setup", "value", "maxlength" => 60, :class => "form-control" %>
				  
				<%when "long text"%>
					<%= text_area "setup", "value", {:cols => 80, :rows => 15,:maxlength => 1000, :class => "form-control"} %>
				
				<%when "choice"%>
				    <%= select("setup", "value", @setup.possible_values.split("|").map {|u| [u, u]}, {}, :size => 5, :class => "form-control") %>
				  
				<%when "color"%>
					<%= text_field "setup", "value", "size" => 6, "maxlength" => 6, :class => 'form-control colorpicker' %>
				<%when "date"%>
					<%= text_field "setup", "value", "size" => 10, "maxlength" => 10, :class => 'form-control datepicker' %>
				<%when "time"%>
					<%= text_field "setup", "value", "size" => 10, "maxlength" => 10, :class => 'form-control timepicker' %>
				<%when "image", "css"%>
					<%= text_field "setup", "value", "size" => 60, "maxlength" => 200, :class => 'form-control filepicker', :rel => @setup.possible_values.blank? ? '' : @setup.possible_values%>
				<%when "number"%>
					<%= text_field "setup", "value", "size" => 20, "maxlength" => 20, :class => 'form-control numberpicker', :rel => @setup.possible_values.blank? ? '0' : @setup.possible_values %>
				<%when "integer"%>
					<%= text_field "setup", "value", "size" => 20, "maxlength" => 20, :class => 'form-control integerpicker' %>
				<%when "alpha"%>
					<%= text_field "setup", "value", "size" => 20, "maxlength" => 20, :class => 'form-control alphapicker' %>
				<%when "font"%>
					<%= text_field "setup", "value", "size" => 60, "maxlength" => 60, :class => 'form-control fontpicker' %>
				<%when "directory"%>
					<%= text_field "setup", "value", "size" => 60, "maxlength" => 200, :class => 'form-control filepicker', :rel => @setup.possible_values.blank? ? '' : @setup.possible_values%>
				<%when "sound"%>
					<%= text_field "setup", "value", "size" => 60, "maxlength" => 200, :class => 'form-control filepicker', :rel => @setup.possible_values.blank? ? '' : @setup.possible_values%>
				<%else%>
				  	<p class="form-control-static"><%=@setup.value%></p>	
				<%end%>
			  </div>			  
  			</div>



