
	  <h4><%= field_description "Données obligatoires", true %></h4>
	  
	  <div class="form-group">
	    <label for="postit_list_name" class="col-sm-4 control-label"><%= field_description "", true %> <%="Nom de la liste".trn%> : </label>
		<div class="col-sm-8">
			<%= text_field "postit_list", "name", :maxlength => 200, :class => "form-control" %>
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="postit_list_description" class="col-sm-4 control-label"><%="Description".trn%> : </label>
	    <div class="col-sm-8">
			<%= text_field "postit_list", "description", :maxlength => 4000, :class => "form-control" %>
		</div>
	  </div>
	  <div class="form-group">
	    <label for="postit_list_sequential" class="col-sm-4 control-label"><%="Tâches séquentielles".trn%> : </label>
	    <div class="col-sm-1">
			<%= easy_tag('check_box',:instance => "postit_list", :field => "sequential") %>		
		</div>
	  </div>
	  <div class="form-group">
	    <label for="postit_list_checkable" class="col-sm-4 control-label"><%="Tâches cochables".trn%> : </label>
	    <div class="col-sm-1">
			<%= easy_tag('check_box',:instance => "postit_list", :field => "checkable") %>		
		</div>
	  </div>
	  <%unless @postit_list.postit_phase%>
		  <div class="form-group">
		    <label for="postit_list_templatable" class="col-sm-4 control-label"><%="Modèle".trn%> : </label>
		    <div class="col-sm-1">
				<%= easy_tag('check_box',:instance => "postit_list", :field => "templatable") %>		
			</div>
		  </div>
	      <div class="form-group">
	        <label for="postit_list_owner_id" class="col-sm-4 control-label"><%= field_description "", true %> <%="Responsable".trn%> : </label>
		    <div class="col-sm-8">
	      	  <%= select("postit_list", :owner_id, [["Tous".trn,0]] + (current_user.blank? ? [] : [["#{current_user.name} #{current_user.firstname}",current_user.id]]) , {:include_blank => ''}, :size => 1, :class => "form-control") %>
		    </div>
		  </div>
	  <%end%>
