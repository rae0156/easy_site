<% 
	@title 		= (@object.new_record? ? "Nouveau produit" : "Modifier un produit").trn 
%>

<div class="center-menu">
    <h2><%= @title %></h2>
	<ul>
		<li class="btn btn-default"><%= render :partial => 'shared/goto_menu_item', :locals => {:text => "Sauver".trn,:image => "appli/save_32.png", :action => "product_save", :id => @object.id, :param_goto => {:year => @year,:needs => @needs},  :form => "resource_product", :remote => true}%></li>
		<li class="btn btn-default"><%= render :partial => 'shared/goto_menu_item', :locals => {:text => "Retour".trn,:image => "appli/back_32.png", :action => "show_stock", :param_goto => {:year => @year,:needs => @needs}, :html_option => {:remote => true}}%></li>
	</ul>
	<div class="clearer"></div>
</div>

<%= form_tag({}, { :name => 'resource_product', :id => 'resource_product', :class => 'form-horizontal' }) do%>
	
	<!-- Error messages -->
	<%= errors_for(@object) %>
	
	<div>
	  	<%= render :partial => "form_product" %>
	</div>
<% end %>

