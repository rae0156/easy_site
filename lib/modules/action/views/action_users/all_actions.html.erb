
<div class="container">
	<div class="alert alert-info">
	  <h2><%="Les actions de tous le monde".trn%></h2>
      <div class="row">
	    <div class="col-sm-12">
		<%ActionUser.all(:order => "name",:conditions=>["user_id = 0"]).each do |a| %>
			<%=generate_action(a.id)%>
		<%end%>
	    </div>
	  </div>
	<%if current_user %>
	  <h2><%="Vos actions".trn%></h2>
      <div class="row">
	    <div class="col-sm-12">
		<%ActionUser.all(:order => "name",:conditions=>["user_id = ?",current_user.id]).each do |a| %>
			<%=generate_action(a.id)%>
		<%end%>
	    </div>
	  </div>
	<%end%>
	</div>
</div>
